@page
@model BankWebApp.Pages.PurchaseModel

@{
    ViewData["Title"] = "Purchase";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Purchase</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" onsubmit="return confirm('Confirm purchase?');">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.Amount" class="control-label"></label>
                <input asp-for="Transaction.Amount" class="form-control" />
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.ItemName" class="control-label"></label>
                <input asp-for="Transaction.ItemName" class="form-control" />
                <span asp-validation-for="Transaction.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
